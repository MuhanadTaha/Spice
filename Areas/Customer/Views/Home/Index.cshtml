@model IndexViewModel 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

@if (Model.Coupons.Count() > 0) 
{
    <div class="border row">
        <div class="carousel" data-ride="carousel" data-interval="2500">

            @for (int i = 0; i < Model.Coupons.Count(); i++)
            {
                var base64 = Convert.ToBase64String(Model.Coupons.ToList()[i].Picture); //لازم أحول الصورة من بايت لنص
                var imgsrc = string.Format("data:image/jpeg;base64,{0}", base64);

                if (i == 0)
                {
                    <div class="carousel-item active"> @*عشان يختفي الايتم ويرد يظهر*@
                        <img src="@imgsrc" height="50px" class="d-block w-100" />
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img src="@imgsrc" height="50px" class="d-block w-100" />
                    </div>
                }
            }

        </div>
    </div>

}

<br /><br />
<div class="whiteBackground container">
    @foreach (var category in Model.Categories)
    {
        var menuItems = Model.MenuItems;//Where(m=>m.Category.Name.Equals(category.Name));
        <div class="row">
            @if(menuItems.Count()>0)
                {
                <div class="col-12">
                    <div class="row">
                        <h3 class="text-success">
                            @category.Name
                        </h3>
                    </div>
                </div>
                }

        </div>
    }
</div>
