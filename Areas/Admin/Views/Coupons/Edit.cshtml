@model Coupon
@{
    ViewData["Title"] = "Edit";
}

<h2 class="text-info">Edit Coupon</h2>
<br />
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="whiteBackground border">
        @if(Model.Picture != null)
            {
                <img style="width:100%;height:100%;border-radius:5px;" src="@("data:image/jpeg;base64," + Convert.ToBase64String(Model.Picture))"/>
                <br />
                <br /> 
            }

        <input type="hidden" asp-for="Id"/>
        <input type="hidden" asp-for="Picture"/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="from-groip row mt-3">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" />
                <span class="text-danger" asp-validation-for="Name"></span> @*To Required Field*@
            </div>
        </div>

        <div class="from-group row mt-3">
            <div class="col-2">
                <label asp-for="Picture" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Picture" type="file" multiple class="form-control" />
            </div>
        </div>




        <div class="from-group row mt-3">
            <div class="col-2">
                <label asp-for="CouponType" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="CouponType" asp-items="Html.GetEnumSelectList<Coupon.ECouponType>()" class="form-control"></select>
            </div>
        </div>


        <div class="from-group row mt-3">
            <div class="col-2">
                <label asp-for="Discount" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Discount" class="form-control" />
                <span class="text-danger" asp-validation-for="Name"></span> @*To Required Field*@
            </div>
        </div>

        <div class="from-group row mt-3">
            <div class="col-2">
                <label asp-for="MinimumAmmount" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="MinimumAmmount" class="form-control" />
                <span class="text-danger" asp-validation-for="Name"></span> @*To Required Field*@
            </div>
        </div>

        <div class="from-control row mt-3">
            <div class="col-2">
                <label asp-for="IsActive" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="checkbox" asp-for="IsActive" class="form-control" />
            </div>
        </div>

        <div class="from-group row" style="padding-top:20px;">
            <div class="col-5 offset-2">
                <partial name="UpdateAndBackListButtonPartialView" />
            </div>
        </div>
    </div>
</form>

@section scripts{   @*عشان يصير الريكواير على مستوى الصفحة مش ع مستوى السيرفير يعني بمنع الريفريش*@
<partial name="_ValidationScriptsPartial" />
}

