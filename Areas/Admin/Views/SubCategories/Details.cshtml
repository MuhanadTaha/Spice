@model SubCategory
@{
    ViewData["Title"] = "Details";
}

<h2 class="text-info">Sub Category Details</h2>
    <div class="whiteBackground border">
        @Html.HiddenFor(m => m.Id)

        <div class="from-control row">
            <div class="col-2">
                <label asp-for="Category.Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Category.Name" readonly class="form-control" />

            </div>
        </div>
        <br />
        <div class="from-control row">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" readonly class="form-control" />
            </div>
        </div>
        <div class="from-group row" style="padding-top:20px;">
            <div class="col-5 offset-2">
                <partial name="_EditAndBackListButtonPartial" model="Model.Id" />
            </div>
        </div>
    </div>
